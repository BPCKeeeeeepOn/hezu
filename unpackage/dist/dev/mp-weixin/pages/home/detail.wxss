.rentdetail {
  background-color: #fff;
  min-height: 100vh;
  padding-bottom: 30rpx;
}
.rentdetail .detail-title {
    min-height: 30rpx;
    line-height: 1;
    padding: 36rpx 0 12rpx;
    font-size: 38rpx;
}
.rentdetail .desc-content {
    position: relative;
    background-color: #f5f5f5;
    margin-top: 30rpx;
    padding: 10rpx 20rpx;
}
.rentdetail .desc-content:after {
      position: absolute;
      left: 24px;
      top: -30rpx;
      margin-left: 0;
      content: "";
      border: 8px solid transparent;
      border-bottom-color: #F5F5F5;
}
.rentdetail .cu-bar .content {
    height: 70rpx;
    line-height: 70rpx;
}
.rentdetail .report-btn {
    color: #999;
}
.rentdetail .rent-list text {
    padding-right: 20rpx;
}
.rentdetail .rent-list .rent-item {
    line-height: 64rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    background-color: #e7e7e7;
    margin-bottom: 20rpx;
    box-sizing: border-box;
    border: 1rpx solid #e7e7e7;
}
.rentdetail .rent-list .rent-item text {
      -webkit-flex-shrink: 0;
              flex-shrink: 0;
      padding: 0 36rpx 0 4rpx;
}
.rentdetail .cu-tag {
    padding-top: 0;
}
.rentdetail .cu-tag[class*="line-"]::after {
    border-radius: 4px;
}
.rentdetail .group-item-wraper {
    padding-bottom: 30rpx;
    border-bottom: 1px solid #f5f5f5;
}
.rentdetail .card-wraper {
    position: relative;
}
.rentdetail .card-wraper .cu-tag {
      position: absolute;
      top: 6rpx;
      right: 6rpx;
}
.rentdetail .card-wraper uni-image {
      height: 100%;
}
.rentdetail .table-item {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    border-top: 1px solid #ccc;
    border-left: 1px solid #ccc;
}
.rentdetail .table-item text {
      padding: 16rpx 0;
      -webkit-box-flex: 1;
      -webkit-flex: 1;
              flex: 1;
      border-right: 1px solid #ccc;
      text-align: center;
}
.rentdetail .table-item .operation {
      color: #4399FC;
