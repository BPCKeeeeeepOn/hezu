    padding-top: 12rpx;
}
.rentdetail .useringo > view:first-child {
      padding-top: 6rpx;
}
.rentdetail .useringo .label {
    color: #333333;
    padding-right: 14rpx;
}
.rentdetail .roominfo .uni-form-item {
    display: -webkit-box;
