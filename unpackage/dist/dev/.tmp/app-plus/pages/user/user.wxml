<view class="user-page"><view class="user-info"><image class="avator" mode="widthFix" src="{{userInfo.avator}}"></image><view class="name-wraper"><text>{{userInfo.name}}</text><button class="mini-btn edit-btn" type="text" size="mini">编辑</button></view></view><view class="swiper"><view class="swiper-box"><swiper circular="true" autoplay="true" data-event-opts="{{[['change',[['swiperChange',['$event']]]]]}}" bindchange="__e"><block wx:for="{{swiperList}}" wx:for-item="swiper" wx:for-index="__i0__" wx:key="id"><swiper-item><image src="{{swiper.img}}" data-event-opts="{{[['tap',[['toSwiper',['$0'],[[['swiperList','id',swiper.id]]]]]]]}}" bindtap="__e"></image></swiper-item></block></swiper><view class="indicator"><block wx:for="{{swiperList}}" wx:for-item="swiper" wx:for-index="index" wx:key="index"><view class="{{['dots',currentSwiper>=index?'on':'']}}"></view></block></view></view></view><view class="personal"><view style="color:#999;padding-top:20rpx;">个人信息</view><block wx:if="{{!isEdit}}"><view class="personal-wraper"><view>{{"姓名: "+userInfo.name}}</view><view>{{"手机号: "+userInfo.phone}}</view><view>{{"性别: "+userInfo.sex}}</view><view>{{"学校: "+userInfo.school}}</view><view>{{"入学时间: "+userInfo.joinTime}}</view><view>{{"毕业时间: "+userInfo.graduationTime}}</view><view>兴趣爱好:<block wx:for="{{userInfo.hobby}}" wx:for-item="item" wx:for-index="index" wx:key="index"><text class="tag">{{''+item+''}}</text></block></view><view>{{"最高学历: "+userInfo.education}}</view><view>{{"学生证照片: "+userInfo.studentPhoto}}</view><view>{{"毕业证照片: "+userInfo.graduationPhoto}}</view><button style="margin-top:38rpx;" type="primary" data-event-opts="{{[['tap',[['editUser',['$event']]]]]}}" bindtap="__e">编辑信息</button></view></block><block wx:else><view class="personal-wraper"><view><text>姓名:</text><input class="uni-input" maxlength="80" placeholder="请输入姓名" data-event-opts="{{[['input',[['__set_model',['$0','name','$event',[]],['editUserInfo']]]]]}}" value="{{editUserInfo.name}}" bindinput="__e"/></view><view><text>手机号:</text><input class="uni-input" type="number" placeholder="请输入手机号" data-event-opts="{{[['input',[['__set_model',['$0','phone','$event',[]],['editUserInfo']]]]]}}" value="{{editUserInfo.phone}}" bindinput="__e"/></view><view><text>性别:</text><label class="radio" style="padding-right:20rpx;"><radio value="男" checked="{{editUserInfo.sex=='男'}}" data-event-opts="{{[['tap',[['e0',['$event']]]]]}}" bindtap="__e"></radio>男</label><label class="radio"><radio value="女" checked="{{editUserInfo.sex=='女'}}" data-event-opts="{{[['tap',[['e1',['$event']]]]]}}" bindtap="__e"></radio>女</label></view><view><text>学校:</text><input class="uni-input" maxlength="100" placeholder="请输入学校名称" data-event-opts="{{[['input',[['__set_model',['$0','school','$event',[]],['editUserInfo']]]]]}}" value="{{editUserInfo.school}}" bindinput="__e"/></view><view><text>入学时间:</text></view><view><text>毕业时间:</text></view><view><text>兴趣爱好:</text><input class="uni-input" maxlength="200" placeholder="请输入兴趣爱好,多个请用,隔开" data-event-opts="{{[['input',[['__set_model',['$0','hobby','$event',[]],['editUserInfo']]]]]}}" value="{{editUserInfo.hobby}}" bindinput="__e"/></view><view><text>最高学历:</text><input class="uni-input" maxlength="200" placeholder="请输入最高学历" data-event-opts="{{[['input',[['__set_model',['$0','education','$event',[]],['editUserInfo']]]]]}}" value="{{editUserInfo.education}}" bindinput="__e"/></view><view><text>学生证照片:</text>{{''+editUserInfo.studentPhoto+''}}</view><view><text>毕业证照片:</text>{{''+editUserInfo.graduationPhoto+''}}</view><button style="margin-top:38rpx;" type="primary" data-event-opts="{{[['tap',[['saveUserInfo',['$event']]]]]}}" bindtap="__e">保 存</button><button data-event-opts="{{[['tap',[['cancelSave',['$event']]]]]}}" style="margin-top:28rpx;" bindtap="__e">取 消</button></view></block></view></view>